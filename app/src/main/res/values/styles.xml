<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ProTeam.ConstraintLayout" parent="Theme.ProTeam">
        <item name="android:background">@color/fondo</item>
    </style>
    
    <style name="Theme.ProTeam.mCardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="ProTeamInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">filled</item>
    </style>
    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="backgroundColor">@color/black_suave</item>
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="TextTitulo" parent="Theme.ProTeam">
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textSize">24sp</item>
        android:paddingStart="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
    </style>

    <style name="TextViewTitulo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewDescripcion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black_suave</item>
    </style>

</resources>