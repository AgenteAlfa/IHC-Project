<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProTeam" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/azul_1</item>
        <item name="colorPrimaryVariant">@color/azul_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde_1</item>
        <item name="colorSecondaryVariant">@color/verde_2</item>
        <item name="colorOnSecondary">@color/fondo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/Theme.ProTeam.mCardView</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black_suave</item>

    </style>



    <style name="FirebaseUIProTeam" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/fondo</item>
    </style>

    <style name="FirebaseUI.Button">
        <item name="backgroundTint">@color/azul_2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="FirebaseUI.Button.AccountChooser.GoogleButton" parent="FirebaseUI.Button.AccountChooser.BaseButton">
        <item name="icon">@drawable/fui_ic_googleg_color_24dp</item>
        <item name="backgroundTint">@color/fui_bgGoogle</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="FirebaseUI.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox" />


    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/azul_1</item>
        <item name="colorPrimaryDark">@color/azul_2</item>
        <item name="colorAccent">@color/verde_1</item>
        <item name="colorButtonNormal">@color/verde_1</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

        <item name="android:textColorHint">@android:color/white</item>

    </style>

    <style name="Theme.ProTeam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProTeam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black_suave</item>
        <item name="android:backgroundTint">@color/gris_claro</item>
    </style>

    <style name="Theme.ProTeam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





</resources>