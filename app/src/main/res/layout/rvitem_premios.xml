<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="8dp"
                                   app:cardBackgroundColor="@color/gris_claro"
                                   app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/ListaPremios_lyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:visibility="invisible">

        <TextView
            android:id="@+id/ListaPremios_txtPremio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/fondo"
            android:textStyle="bold"
            tools:text="Colaborador productivo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-" />

        <TextView
            android:id="@+id/ListaPremios_txtPuntaje"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/fondo"
            android:textStyle="bold"
            tools:text="16p" />

    </LinearLayout>

    <TextView
        android:id="@+id/ListaPremios_txtNoPremio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Sin premios establecidos :("
        android:textColor="@color/black" />

</androidx.cardview.widget.CardView>