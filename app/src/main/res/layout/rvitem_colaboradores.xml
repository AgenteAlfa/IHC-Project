<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="4dp"
                                   app:cardBackgroundColor="@color/gris_claro"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="4dp"
                                   app:contentPadding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ListaColaboradores_txtNyA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textColor="@color/black"
            tools:text="Colaborador productivo" />

        <Switch
            android:id="@+id/ListaColaboradores_swcSupervisor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Supervisor" />

        <ImageButton
            android:id="@+id/ListaColaboradores_ibtnEliminar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/gris_claro"
            android:contentDescription="Cerrar"
            android:src="@drawable/ic_cerrar" />
    </LinearLayout>

</androidx.cardview.widget.CardView>